        aeson                              >= 2.0.3,
        containers                         >= 0.6.5,
        bytestring                         >= 0.11.3,
        mtl                                >= 2.2.2,
        transformers                       >= 0.5.6,
        text                               >= 1.2.5,
        dep-t                              >= 0.6.4 && < 0.7,
        dep-t-advice                       >= 0.6.2 && < 0.7,
